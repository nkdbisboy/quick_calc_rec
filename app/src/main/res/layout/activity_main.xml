<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backend"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/choose_from_album"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/album"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/take_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/take_photo"
        android:layout_width="103dp"
        android:layout_height="88dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="20dp"
        android:text="拍照"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/take_photo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="79dp"
        android:text="相册"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/choose_from_album" />

</androidx.constraintlayout.widget.ConstraintLayout>